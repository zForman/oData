<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:l="sap.ui.layout"
        xmlns:f="sap.ui.layout.form"
        xmlns:core="sap.ui.core">
    <VBox class="sapUiSmallMargin"
          items="{/Profile}"
    >
        <f:SimpleForm id="SimpleFormChange"
                      editable="true"
                      layout="ResponsiveGridLayout"
                      title="{ename}"
                      labelSpanXL="3"
                      labelSpanL="3"
                      labelSpanM="3"
                      labelSpanS="12"
                      adjustLabelSpan="false"
                      emptySpanXL="4"
                      emptySpanL="4"
                      emptySpanM="4"
                      emptySpanS="0"
                      columnsXL="1"
                      columnsL="1"
                      columnsM="1"
                      singleContainerFullSize="false">
            <f:content>

                <Label text="Новый номер телефона"/>
                <Input id="cellPhone" value="{cellPhone}"/>
            </f:content>
        </f:SimpleForm>
    </VBox>
</core:FragmentDefinition>